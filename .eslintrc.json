{
    "env": {
        "commonjs": true,
        "es6": true,
        "node": true
    },
    "extends": [
        "airbnb-base"
    ],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 2018
    },
    "rules": {
        "indent": ["error", 4, {"SwitchCase": 1}],
        "arrow-body-style": "off",
        "no-empty": "off",
        "no-plusplus": [2, { "allowForLoopAfterthoughts": true }],
        "require-await": "error",
        "no-param-reassign": "off",
        "no-return-await": "off",
        "no-await-in-loop": "off",
        "prefer-destructuring": "off",
        "no-continue": "off",
        "max-len": "off"
    }
}